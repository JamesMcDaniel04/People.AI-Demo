{
  "name": "ai-account-planner",
  "version": "1.0.0",
  "description": "AI-powered account planning system with external data integration",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node src/index.js",
    "start:prod": "NODE_ENV=production node --max-old-space-size=4096 src/index.js",
    "dev": "NODE_ENV=development node --watch src/index.js",
    "test": "NODE_ENV=test node --test tests/*.test.js",
    "test:coverage": "NODE_ENV=test c8 node --test tests/*.test.js",
    "lint": "eslint src/",
    "typecheck": "node --check src/**/*.js",
    "validate": "npm run typecheck && npm run lint && npm test",
    "deploy": "npm run validate && npm run start:prod"
  },
  "keywords": [
    "ai",
    "account-planning",
    "mcp",
    "data-integration"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "dotenv": "^16.3.1",
    "groq-sdk": "^0.32.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  }
}
