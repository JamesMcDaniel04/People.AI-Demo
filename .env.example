# Application Environment
NODE_ENV=development

# MCP (Model Context Protocol) Configuration
MCP_ENABLED=false
MCP_SERVER_URL=ws://localhost:3001
MCP_API_KEY=your_mcp_api_key_here
MCP_TIMEOUT=30000
MCP_RETRY_ATTEMPTS=3

# MCP Capabilities
MCP_EMAIL_ENABLED=false
MCP_CALENDAR_ENABLED=false
MCP_CRM_ENABLED=false
MCP_DOCUMENTS_ENABLED=false

# External API Configuration
EXTERNAL_API_ENABLED=false
EXTERNAL_API_BASE_URL=https://api.example.com
EXTERNAL_API_KEY=your_external_api_key_here

# API Endpoints
NEWS_API_ENDPOINT=/news
FINANCIAL_API_ENDPOINT=/financial
COMPANY_API_ENDPOINT=/company

# Rate Limiting
API_RATE_LIMIT=100
API_HOURLY_LIMIT=1000

# AI Configuration
AI_PROVIDER=claude
AI_MODEL=claude-3-sonnet
AI_API_KEY=your_ai_api_key_here
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.1

# AI Features
AI_ANALYSIS_ENABLED=true
AI_RECOMMENDATIONS_ENABLED=true
AI_RISK_ASSESSMENT_ENABLED=true

# Data Configuration
DATA_CACHE_ENABLED=true
DATA_CACHE_DURATION=3600000
DATA_BATCH_SIZE=100
MAX_CONCURRENT_REQUESTS=10

# Logging Configuration
LOG_LEVEL=info
LOG_CONSOLE_ENABLED=true
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs/app.log

# Account Planning Settings
PLAN_PERIOD=Q2-Q4 2024

# Health Score Weights (must sum to 1.0)
HEALTH_WEIGHT_FINANCIAL=0.3
HEALTH_WEIGHT_ENGAGEMENT=0.3
HEALTH_WEIGHT_GROWTH=0.2
HEALTH_WEIGHT_SATISFACTION=0.2

# Opportunity Thresholds
OPPORTUNITY_THRESHOLD_HIGH=0.7
OPPORTUNITY_THRESHOLD_MEDIUM=0.4
OPPORTUNITY_THRESHOLD_LOW=0.2

# Risk Thresholds
RISK_CONTRACT_EXPIRY_DAYS=90
RISK_STAKEHOLDER_INACTIVE_DAYS=60
RISK_ENGAGEMENT_DROP=0.5

# Security Settings
SECURITY_RATE_LIMIT_ENABLED=true
SECURITY_CORS_ENABLED=false
SECURITY_ALLOWED_ORIGINS=localhost
SECURITY_ENCRYPTION_ENABLED=false