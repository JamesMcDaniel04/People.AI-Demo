# Application Environment
NODE_ENV=development

# Select data source: mcp | sample | external
DATA_SOURCE=sample

# MCP (Model Context Protocol) Configuration with Klavis
MCP_ENABLED=true
KLAVIS_API_KEY=your_klavis_api_key_here
MCP_TIMEOUT=30000
MCP_RETRY_ATTEMPTS=3

# MCP Server Enablement (default: all enabled)
MCP_GMAIL_ENABLED=true
MCP_CALENDAR_ENABLED=true
MCP_DRIVE_ENABLED=true
MCP_SLACK_ENABLED=true
MCP_NOTION_ENABLED=true

# MCP Tool Settings
MCP_TOOL_CACHE_ENABLED=true
MCP_TOOL_CACHE_TIMEOUT=300000
MCP_MAX_CONCURRENT_TOOLS=5
MCP_TOOL_TIMEOUT=30000

# OAuth Configuration for MCP Services
MCP_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback
MCP_OAUTH_STATE_SECRET=your_secure_state_secret_here
MCP_TOKEN_STORAGE=file

# External API Configuration (Option B: NewsAPI.org example)
EXTERNAL_API_ENABLED=false
# For NewsAPI.org set: https://newsapi.org/v2 and endpoint /everything
EXTERNAL_API_BASE_URL=https://newsapi.org/v2
EXTERNAL_API_KEY=your_newsapi_key_here

# API Endpoints
NEWS_API_ENDPOINT=/everything
FINANCIAL_API_ENDPOINT=/financial
COMPANY_API_ENDPOINT=/company

# Rate Limiting
API_RATE_LIMIT=100
API_HOURLY_LIMIT=1000

# AI Configuration - Mixed Providers (OpenAI + Anthropic)
AI_PROVIDER=mixed
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.1

# AI Model Selection (Mixed: Claude for analysis, GPT for opportunities)
AI_HEALTH_MODEL=claude-3-5-sonnet-20241022
AI_OPPORTUNITIES_MODEL=gpt-4o
AI_RISKS_MODEL=claude-3-5-sonnet-20241022
AI_RECOMMENDATIONS_MODEL=gpt-4o
AI_INSIGHTS_MODEL=claude-3-5-sonnet-20241022

# AI Features
AI_ANALYSIS_ENABLED=true
AI_RECOMMENDATIONS_ENABLED=true
AI_RISK_ASSESSMENT_ENABLED=true
AI_INSIGHTS_ENABLED=true

# Data Configuration
DATA_CACHE_ENABLED=true
DATA_CACHE_DURATION=3600000
DATA_BATCH_SIZE=100
MAX_CONCURRENT_REQUESTS=10

# Logging Configuration
LOG_LEVEL=info
LOG_CONSOLE_ENABLED=true
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs/app.log

# Account Planning Settings
PLAN_PERIOD=Q2-Q4 2024

# Health Score Weights (must sum to 1.0)
HEALTH_WEIGHT_FINANCIAL=0.3
HEALTH_WEIGHT_ENGAGEMENT=0.3
HEALTH_WEIGHT_GROWTH=0.2
HEALTH_WEIGHT_SATISFACTION=0.2

# Opportunity Thresholds
OPPORTUNITY_THRESHOLD_HIGH=0.7
OPPORTUNITY_THRESHOLD_MEDIUM=0.4
OPPORTUNITY_THRESHOLD_LOW=0.2

# Risk Thresholds
RISK_CONTRACT_EXPIRY_DAYS=90
RISK_STAKEHOLDER_INACTIVE_DAYS=60
RISK_ENGAGEMENT_DROP=0.5

# n8n Workflow Automation Configuration
N8N_ENABLED=true
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key_here

# n8n Execution Settings
N8N_EXECUTION_TIMEOUT=300000
N8N_RETRY_ATTEMPTS=2
N8N_RETRY_DELAY=5000

# n8n Integration Settings
N8N_KLAVIS_INTEGRATION=true
N8N_AI_INTEGRATION=true
N8N_WEBHOOK_BASE_URL=http://localhost:5678/webhook

# n8n Templates
N8N_AUTO_REGISTER_TEMPLATES=true
N8N_UPDATE_EXISTING_TEMPLATES=false

# n8n Security
N8N_VALIDATE_SSL=true
N8N_ALLOWED_HOSTS=localhost,127.0.0.1
N8N_ENCRYPT_WORKFLOW_DATA=false

# Workflow Engine Configuration
WORKFLOW_ENGINE=hybrid
WORKFLOW_DEFAULT_ENGINE=internal
MAX_CONCURRENT_WORKFLOWS=5
WORKFLOW_TIMEOUT=600000

# Workflow Scheduling
WORKFLOW_SCHEDULER_ENABLED=true
WORKFLOW_TIMEZONE=UTC

# Workflow Distributors
EMAIL_DISTRIBUTOR_ENABLED=true
EMAIL_DEFAULT_TEMPLATE=account-plan
SLACK_DISTRIBUTOR_ENABLED=true
SLACK_DEFAULT_CHANNEL=#account-planning
WEBHOOK_DISTRIBUTOR_ENABLED=true
WEBHOOK_TIMEOUT=30000

# Security Settings
SECURITY_RATE_LIMIT_ENABLED=true
SECURITY_CORS_ENABLED=false
SECURITY_ALLOWED_ORIGINS=localhost
SECURITY_ENCRYPTION_ENABLED=false
